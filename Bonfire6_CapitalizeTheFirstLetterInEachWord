function titleCase(str) {
  var strarray = str.split(" ");
  var titleStr = "";
  for (var i=0; i<strarray.length; i++) {
    titleStr += (strarray[i].charAt(0).toUpperCase() + strarray[i].substring(1).toLowerCase());
    if (i!=strarray.length-1)
      titleStr += " ";
  }
  return titleStr;
}
