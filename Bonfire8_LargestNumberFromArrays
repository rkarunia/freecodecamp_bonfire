function largestOfFour(arr) {
  // You can do this!
  var largest = 0;
  var largestNumbers = [];
  for (var i=0; i<arr.length; i++) {
    for (var j=0; j<arr[i].length; j++) {
      if (arr[i][j] > largest) {
        largest = arr[i][j];        
      }    
    }  
    largestNumbers[i] = largest;
  }
  return largestNumbers;
}
// Test cases
